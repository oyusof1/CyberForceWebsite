<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CyberForce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/solis.png" class="navbar-brand" width="300" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav justify-content-around flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Manufacturing">Manufacturing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SolarGeneration">Solar Generation</a>
                        </li>
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                if (User.HasClaim("Role", "Admin"))
                                {
                                    <li class="nav-item ml-auto">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
                                    </li>
                                }
                            }
                        }

                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item ml-auto">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="SignOut">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item ml-auto">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Login">Login</a>
                                </li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="footer border-top shadow mt-3">
        <div class="row justify-content-center mb-0 pt-3 pb-0 row-2 px-3">
            <div class="col-12">
                <div class="row row-2 justify-content-between">
                    <div class="col-sm-3 d-flex justify-content-center text-md-center">
                        <a class="" asp-controller="Home" asp-action="Index">
                            <img src="../vita11.png" class="ml-2" width="300" style="position: relative; top: 35px" />
                        </a>
                    </div>
                    <div class="col-sm-3 d-flex justify-content-center my-sm-0 mt-5">
                        <form class="form-inline newsletter">
                            <label for="inlineFormInputName2">Subscribe to Newsletter</label>
                            <input type="email" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="jane@example.com">
                            <button id="submitBtn" class="btn blueBtn mt-2 mb-2">Submit</button>
                        </form>
                    </div>
                    <div class="col-sm-3 d-flex justify-content-center my-sm-0 mt-5">
                        <ul class="list-unstyled">
                            <li>
                                <a class="text-decoration-none text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                            </li>
                            <li>
                                <a class="text-decoration-none text-dark" asp-area="" asp-controller="Home" asp-action="Manufacturing">Manufacturing</a>
                            </li>
                            <li>
                                <a class="text-decoration-none text-dark" asp-area="" asp-controller="Home" asp-action="SolarGeneration">Solar Generation</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center p-2" style="background-color: rgba(0, 0, 0, 0.2)">
            <a class="text-decoration-none text-dark" href="/Home/Index">© 2022 Copyright: SOLE-ZON-SOLIS</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive.js"></script>

    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>document.getElementById('submitBtn').addEventListener('click', function (e) {
            e.preventDefault();
        });</script>
</body>
</html>


