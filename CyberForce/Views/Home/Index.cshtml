@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron mask jumbotron-fluid mt-5" style="background-color: rgba(0, 0, 0, 0.6);">
    <div class="container mask" style="background-color: rgba(0, 0, 0, 0.6);">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="text-white text-center p-3">
                <h1 class="mb-3">Solar Panels</h1>
                <h4 class="mb-3">Every 24 hours, enough sunlight touches the Earth to provide energy for the entire planet for 24 years</h4>
            </div>
        </div>
    </div>
</div>


<section class="container mt-5 mb-5">
    <h1 class="text-center">Sonnenburg Fields</h1>
    <div class="container">
        <div class="row text-center">
            <div class="col">
                <div class="card text-center">
                    <div class="card-header">
                        Solar Arrays
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Voltage</th>
                                    <th scope="col">Current</th>
                                    <th scope="col">Temp</th>
                                    <th scope="col">Tilt</th>
                                    <th scope="col">Azimuth</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var array in Model.solarArrays)
                                {
                                    <tr>
                                        <td>@array.ArrayId</td>
                                        <td>@array.SolarStatus</td>
                                        <td>@array.OutputVoltage</td>
                                        <td>@array.OutputCurrent</td>
                                        <td>@array.Temperature</td>
                                        <td>@array.TrackerTilt</td>
                                        <td>@array.AzimuthAngle</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-center">
                    <div class="card-header">
                        Power Generation
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Power</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var array in Model.solarArrays)
                                {
                                    <tr>
                                        <td>@array.PowerGeneration</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

