@model Form
@{
    ViewData["Title"] = "Contact Us";
}

<section>
    <div class="container">
        <div class="row justify-content-center">
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="wrapper">
                    <div class="row no-gutters">
                        <div class="col-lg-8 col-md-7 order-md-last d-flex align-items-stretch">
                            <div class="contact-wrap w-100 p-md-5 p-4">
                                <h3 class="mb-4">Get in touch</h3>
                                <form enctype="multipart/form-data" asp-controller="Home" asp-action="Contact" id="contactForm" name="contactForm" class="contactForm">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="label" for="name">Full Name</label>
                                                <input type="text" class="form-control" asp-for="Name" name="name" id="name" placeholder="Name">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="label" for="email">Email Address</label>
                                                <input type="email" class="form-control" asp-for="Email" name="email" id="email" placeholder="jane@example.com">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="label" for="phone">Phone Number</label>
                                                <input type="tel" class="form-control" asp-for="Phone" name="phone" id="phone" placeholder="123-456-7899">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <div class="mb-3">
                                                    <label for="formFile" class="form-label">File Upload</label>
                                                    <input class="form-control" type="file" asp-for="File" name="file" id="formFile">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input id="submit" type="submit" value="Submit" class="btn btn-primary">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-5 d-flex align-items-stretch">
                            <div class="info-wrap shadow rounded border w-100 p-md-5 p-4">
                                <p class="mb-4 text-dark">
                                    Welcome to Sole-Zon-Solis Energy, we
                                    are happy to answer any questions you
                                    might have about our services. Please
                                    fill out the contact us form and we will
                                    get back to you shortly!
                                </p>
                                <div class="dbox w-100 d-flex align-items-center text-dark">
                                    <div class="text pl-3">
                                        <p><span>Phone:</span> <a class="text-decoration-none" href="tel://1234567899">+ 123 456 7899</a></p>
                                    </div>
                                </div>
                                <div class="dbox w-100 d-flex align-items-center text-dark">
                                    <div class="text pl-3">
                                        <p><span>Email:</span> <a class="text-decoration-none" href="">contact@solezonsolis.com</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script type="text/javascript">document.getElementById('submitBtn').addEventListener('click', function (e) {
            e.preventDefault();
        });
        var $form = $("#contactForm");
        var $submitbutton = $("#submit");

        $(function () {
            $("#submit").prop("disabled", true);
        });

        $("#contactForm").validate({
            rules: {
                phone: {
                    required: true,
                    phoneUS: true
                }
            },
            errorClass: "invalid"
        });

        $form.on("blur", () => {
            if ($form.valid()) {
                $submitbutton.removeAttr("disabled");
            } else {
                $submitbutton.attr("disabled", "disabled");
            }
        });</script>
}